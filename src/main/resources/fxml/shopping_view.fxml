<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane
  maxHeight="500.0" maxWidth="800.0" minHeight="500.0" minWidth="800.0" prefHeight="500.0"
  prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="oogasalad.view.playing.ShoppingPageController"
>
  <top>
    <HBox alignment="CENTER">
      <Text text="SHOP" fx:id="name"/>
    </HBox>
  </top>
  <center>
    <GridPane fx:id="shoppingItem">
    </GridPane>
  </center>

  <bottom>
    <HBox alignment="center">
      <Button fx:id="back" text="back"></Button>
    </HBox>
  </bottom>
  <left>
    <VBox prefHeight="236.0" prefWidth="40.0" style="-fx-background-color: #7ABAF2;"
      BorderPane.alignment="CENTER"/>
  </left>
  <right>
    <VBox prefHeight="236.0" prefWidth="40.0" style="-fx-background-color: #7ABAF2;"
      BorderPane.alignment="CENTER"/>
  </right>

  <stylesheets>
    <URL value="@shopping_view.css"/>
  </stylesheets>
</BorderPane>



