<?import javafx.scene.layout.VBox?>
<BorderPane maxHeight="500.0" maxWidth="800.0" minHeight="500.0" minWidth="800.0" prefHeight="500.0"
  prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="oogasalad.view.playing.PlayingPageController">
  <top>
    <HBox alignment="CENTER" prefHeight="56.0" prefWidth="800.0" spacing="10"
      style="-fx-background-color: #7FB2F0;" BorderPane.alignment="CENTER">
      <Label text="Time: "/>
      <Label fx:id="timeLabel"/>
      <ProgressBar fx:id="energyProgressBar" progress="0.62"/>
      <Button onAction="#openShop" text="Shop"/>
    </HBox>
  </top>
  <center>
    <GridPane fx:id="landGridPane" hgap="1.0" prefHeight="390.0" prefWidth="720.0"
      style="-fx-background-color: #365FB7#365FB7;" vgap="1.0">
      <!-- Grid cells representing the land -->
    </GridPane>
  </center>
  <bottom>
    <HBox alignment="CENTER" prefHeight="54.0" prefWidth="500.0" spacing="5"
      style="-fx-background-color: #ACF0F2;">
      <children>
        <GridPane fx:id="toolGridPane" gridLinesVisible="true">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          </rowConstraints>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
        </GridPane>
      </children>
    </HBox>
  </bottom>
  <left>
    <VBox prefHeight="236.0" prefWidth="40.0" style="-fx-background-color: #7ABAF2;"
      BorderPane.alignment="CENTER"/>
  </left>
  <right>
    <VBox prefHeight="236.0" prefWidth="40.0" style="-fx-background-color: #7ABAF2;"
      BorderPane.alignment="CENTER"/>
  </right>
</BorderPane>
